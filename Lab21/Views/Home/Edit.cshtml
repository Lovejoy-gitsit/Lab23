
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<h2>Item Details</h2>

<form action="/Home/Saveitem" method="post">
    Item Name: <input type="text" name="Name" value="@Model.Name"  /><br /><br />
    Description: <input type="text" name="Description" value="@Model.Description"/><br /><br />
    Quantity: <input type="text" name="Quantity" value="@Model.Quantity" /><br /><br />
    Price: <input type="text" name="Price" value="@Model.Price"/><br /><br />
    <input type="submit" value="Save Changes" /><br /><br />
</form>


